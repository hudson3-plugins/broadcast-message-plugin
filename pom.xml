    <artifactId>broadcast-message-plugin</artifactId>
    <version>0.3-SNAPSHOT</version>
    <packaging>hpi</packaging>
    <name>broadcast-message-plugin</name>
    <url>http://wiki.hudson-ci.org/display/HUDSON/Broadcast+Message+Plugin</url>
	<description>
		broadcast-message-plugin is a simple plugin which allows administrators to broadcast a custom global message visible to all Hudson instance users. Those messages are similiar to "Hudson is preparing to shutdown" message, but they are customizable.
	</description>
    
    <properties>
       <hudsonTags>notifiers</hudsonTags>
    </properties>
    
